{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "baseUrl": "./",
    "target": "es2022",
    "paths": {
      "@/*": ["./src/*"]
    },
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "react": {
        "runtime": "automatic",
        "refresh": true
      }
    }
  },
  "module": {
    "type": "nodenext",
    "strict": true
  },
  "minify": true
}
