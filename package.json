{
  "name": "vitnode",
  "version": "0.1.0",
  "version_code": "10000",
  "description": "VitNode app",
  "author": "Maciej Piotr (aXenDev) Balcerzak",
  "license": "GPL-3.0 license",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test:once",
    "start": "turbo start",
    "preinstall": "npx only-allow pnpm",
    "config:init": "cd frontend && pnpm config:init && cd ..",
    "codegen": "cd backend && pnpm codegen && cd ..",
    "docker:dev": "docker-compose -f ./docker-compose-dev.yml -p vitnode-dev up -d",
    "docker:prod": "sh docker-prod.sh",
    "docker:clear": "sudo docker system prune -a"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "^1.13.3"
  }
}
